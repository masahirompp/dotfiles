{
  "compilerOptions": {
    "baseUrl": ".",
    "experimentalDecorators": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitThis": true,
    "paths": {
      "@/*": ["./*"]
    },
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
    "types": []
  },
  "include": ["src/index.ts"],
  "exclude": ["node_modules"]
}
